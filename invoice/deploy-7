---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: invoiceservice
spec:
  minReadySeconds: 5
  replicas: 1
  selector:
    matchLabels:
      app: invoice
  template:
    metadata:
      labels:
        app: invoice
    spec:
      containers:
      - name: invoiceservice
        image: pitstop/invoiceservice:1.0
        env:
        - name: DOTNET_ENVIRONMENT
          value: Production
        resources:
          limits: 
            cpu: "2000m"
            memory: "2Gi"
          requests:
            cpu: "1000m"
            memory: "1024Mi"
       
        
        
         

            
